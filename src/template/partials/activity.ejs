<div class="fixed bottom-0 lg:border-r top-16 left-0 p-6 lg:w-80 border-gray-200 bg-gray-100 w-full overflow-auto lg:block hidden dark:border-gray-600 dark:bg-gray-800 dark:text-gray-200 text-gray-800">
    <div class="font-bold text-xl tracking-tight mb-8">Activity</div>
    <div class="grid gap-y-4">
        <% logs_activity.sort((a, b) => b.time - a.time).slice(0, 25).forEach((log) => { %>
            <div class="dark:text-gray-400 text-gray-500 text-sm gap-y-1 grid border-b border-gray-200 dark:border-gray-600 pb-4 relative">
                <h2 class="font-medium text-gray-900 pr-8 dark:text-gray-100 text-base">
                    <%= log.username %>
                </h2>
                <% if(log.type === 'attempt_update') { %>
                    <span>Attempt to update the <span class="break-all"><%= log.service %></span> service during lockout days/hours</span>
                <% } %>
                <% if(log.type === 'attempt_force_update') { %>
                    <span>Attempt to force re-deploy the <span class="break-all"><%= log.service %></span> service during lockout days/hours</span>
                <% } %>
                <% if(log.type === 'attempt_scale') { %>
                    <span>Attempt to scale the <span class="break-all"><%= log.service %></span> service during lockout days/hours</span>
                <% } %>

                <% if(log.type === 'update') { %>
                    <span>Updated the <span class="break-all"><%= log.service %></span> service image version from <%= log.params.old_image_version.split('@')[0] %> to <%= log.params.new_image_version.split('@')[0] %></span>
                <% } %>
                <% if(log.type === 'force_update') { %>
                    <span>Force re-deployed the <span class="break-all"><%= log.service %></span> service</span>
                <% } %>
                <% if(log.type === 'scale') { %>
                    <span>Scaled the <span class="break-all"><%= log.service %></span> service to <%= log.params.scale %> container(s)</span>
                <% } %>
                <div class="absolute top-0 right-0"><%= getTimeAgo(log.time) %></div>
            </div>
        <% }); %>
    </div>
</div>
